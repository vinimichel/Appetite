<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appetite" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Button.Basic" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">#fbfbfb</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">26dp</item>
        <item name="iconPadding">12dp</item>
        <item name="android:onClick">setFilter</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#919191</item>
        <item name="font">@font/poppins_bold</item>

    </style>
    <style name="Button.Selected" parent="@style/Button.Basic">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@drawable/selected_category_button_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FilterChip" parent="@style/Widget.Material3.Chip.Assist">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>